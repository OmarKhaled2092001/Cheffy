<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPlanMeal"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPlanMeal"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/background_image_for_today_s_meal"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_background"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPlanMealName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text=""
            tools:text="Grilled Chicken Salad"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgPlanMeal"
            app:layout_constraintTop_toTopOf="parent" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/go_to_recipe"
            android:textColor="@color/primary_color"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvPlanMealName"
            app:layout_constraintTop_toBottomOf="@id/tvPlanMealName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
