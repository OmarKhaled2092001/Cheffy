<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_card_bg"
    android:paddingTop="24dp">

    <View
        android:id="@+id/viewHandle"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="Honey Garlic Glazed Salmon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHandle" />

    <LinearLayout
        android:id="@+id/tagsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/tvMealName"
        app:layout_constraintStart_toStartOf="@id/tvMealName"
        app:layout_constraintTop_toBottomOf="@id/tvMealName">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategory"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                app:chipBackgroundColor="#FFF3E0"
                app:chipStrokeWidth="0dp"
                android:clickable="false"
                tools:text="Dinner" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipArea"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1976D2"
                app:chipBackgroundColor="#E3F2FD"
                app:chipStrokeWidth="0dp"
                android:clickable="false"
                tools:text="Italian" />

        </com.google.android.material.chip.ChipGroup>

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToPlan"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/add_to_plan"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="@color/black"
            app:cornerRadius="20dp"
            app:elevation="0dp"
            app:icon="@drawable/calendar"
            app:iconTint="@color/white"
            app:iconSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        tools:text="@string/meal_details_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagsContainer" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/segment_container_bg"
        app:tabIndicator="@drawable/segment_selected_bg"
        app:tabIndicatorColor="@null"
        app:tabIndicatorGravity="stretch"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorAnimationMode="linear"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/text_gray"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabRippleColor="@null"
        app:layout_constraintTop_toBottomOf="@id/tvDescription">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ingredient" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/instructions" />
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>